<% if(article) { %>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                <%= article.title%>>
            </li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%= article.image %>" class="img-fluid sticky-top" style="top: 20px">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1>
                        <%= article.title%>
                    </h1>
                </div>
                <div class="col-12 mb-4">
                    <i class="bi bi-tag">
                        <%= article.category %>
                    </i>
                </div>
                <div class="col-12 mb-4">
                    <i class="bi">
                        Author: <%= article.author %>
                    </i>
                </div>
                <div class="col-12 mb-4">
                    <i class="bi">
                        Date: <%= article.date.toUTCString() %>
                    </i>
                </div>
                <div class="col-12" style="white-space:pre-line;">
                    <p>Content</h4>
                        <%= article.description%>
                </div>
            </div>
        </div>
    </div>

    <% } %>